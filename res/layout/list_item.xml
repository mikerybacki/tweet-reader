<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageview_tweet_account_icon"
            android:layout_width="@dimen/imageview_tweet_account_icon_width"
            android:layout_height="@dimen/imageview_tweet_account_icon_height"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/description_image_account" />

        <TextView
            android:id="@+id/textview_tweet_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageview_tweet_account_icon" />

        <TextView
            android:id="@+id/textview_tweet_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/imageview_tweet_account_icon"
            android:layout_below="@+id/textview_tweet_account_name" />

        <ImageButton
            android:id="@+id/imagebutton_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/description_imagebutton_follow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_tweet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_publish_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_tweet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview_tweet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="@dimen/default_margin"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_tweet_retweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>